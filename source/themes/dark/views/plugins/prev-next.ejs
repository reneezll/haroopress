                    <% if(prev || next) { %>
                        <div class="meta clearfix">
                            <% if(next) { %>
                            <div class="pull-right prev-next">
                                <a href="/post/<%= next._file %>" class="button next"><%= next.head.title %><i class="icon"></i></a>
                            </div>
                            <% } %>

                            <% if(prev) { %>
                            <div class="pull-left prev-next">
                                <a href="/post/<%= prev._file %>" class="button prev"><i class="icon"></i> <%= prev.head.title %></a>
                            </div>
                            <% } %>
                        </div>
                    <% } %>