<div class="container page-author">
    <div class="row">
        <div class="span3">
            <%- partial('plugins/contributors', { contributors: config.plugins.contributors, authors: authors, authorsOrder: authorsOrder }) %>
            <%- partial('plugins/category-menu', { categories: categories }) %>
        </div>
        <div class="span9">
            <div class="well bg">
                <div class="pull-right">
                    <ul class="thumbnails">
                        <li class="thumbnail">
                            <a>
                                <img src="<%= author._gravatar %>" width="48"/>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="page-header">
                    <h1><%= author.head.name %>'s Articles
                    </h1>
                </div>
                <div class="row">
                    <div class="span8">
                        <ul>
                    <% author.archives.forEach(function(archive) { %>
                            <li>
                                <h3>
                                    <a href="/post/<%= archive._file %>"><%= archive.head.title %></a> <small>at <%= archive.head.published %></small>
                                </h3>
                            </li>
                    <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- /container -->
