<% if(config.display) { %>
<div class="well">
    <ul class="nav nav-list">
        <li class="nav-header">Recent Articles</li>
    <%  var archive, archives = dates.serialize,
            limit = config.articleCount < archives.length ? config.articleCount : archives.length;

        for(var i = 0; i < limit; i++) {
            archive = archives[i];
    %>
        <li>
            <a href="/post/<%= archive._file %>" target="_blank"><%= archive.head.title %>
            <span class="label"><%= archive.author.head.name %></span></a>
        </li>
    <% } %>
    </ul>
</div>
<% } %>